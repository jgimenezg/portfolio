---
import Section from "../Section.astro";
import {languages} from "@cv";
---

<Section title="Languages">
    <ul>
      {
        languages.map(({ language, fluency }) => {
          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>{language}</h3>
                    <h4>{fluency}</h4>
                  </div>
                </header>
                <footer />
              </article>
            </li>
          );
        })
      }
    </ul>
  </Section>

  <style>
    ul{
        display: flex;
        flex-direction: row;
        justify-content: space-between;
    }

    article h3{
        font-weight: 500;
        color: #111;
    }

    article h4{
        color: #222;
        font-weight: 400;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }
</style>